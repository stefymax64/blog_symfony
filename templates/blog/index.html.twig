{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur mon blog !{% endblock %}

{% block body %}

    {% for publication in publications  %}
        <h4>{{ publication.title }}</h4>
        <p>
            <a href="{{ path('publication', {id: publication.id}) }}">Plus de d√©tails</a>
        </p>
    {% endfor %}
    {% if previous >= 0 %}
        <a href="{{ path('publication', {id: publication.id, offset: previous}) }}">Previous</a>
    {% endif %}

    {% if next < comments|length %}
        <a href="{{ path('publication', {id: publication.id, offset: next}) }}">Next</a>
    {% endif %}

{% endblock %}
